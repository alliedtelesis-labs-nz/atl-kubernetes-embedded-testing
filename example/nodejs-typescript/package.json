{
  "name": "nodejs-typescript-example",
  "version": "1.0.0",
  "description": "Node.js + TypeScript integration test example using ket",
  "main": "dist/example-http-server.js",
  "scripts": {
    "postbuild": "cp package.json dist/ && cp -r node_modules dist/",

    "build": "tsc",
    "deploy": "docker build -t example-http-server:latest .",
    "start": "node dist/example-http-server.js",
    "dev": "ts-node src/example-http-server.ts",

    "test:integration": "ket launch",
    "test:integration:watch": "ket launch --test-command 'npm run test:internal:mocha-integration:watch'",
    "test:integration:debug": "ket launch --debug --keep-namespace",

    "test:internal:mocha-integration": "mocha -r ts-node/register",
    "test:internal:mocha-integration:watch": "mocha -r ts-node/register --watch --watch-files src/**/*.ts,test/**/*.ts",

    "cluster:start": "kind create cluster --name ket-test --config kind-config.yaml",
    "cluster:stop": "kind delete cluster --name ket-test",

    "docker:build-test-runner": "docker build -t ket-test-runner ../../kubernetes-embedded-testing"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "express": "^4.18.2",
    "mongodb": "^6.3.0"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  }
}
